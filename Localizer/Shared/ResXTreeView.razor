@using Localizer.Core.Model

<MudPaper Width="400px" Class="d-flex flex-column overflow-x-auto" Style="flex-grow: 1;" Elevation="0" Height="90vh">
    <MudTreeView @bind-SelectedValue="SelectedValue" Hover="true" ExpandOnClick="true">
        @if (Tree != null)
        {
            <ResxTreeNodeView TreeNode="Tree.Root" />
        }
    </MudTreeView>
</MudPaper>

@code {
    string SelectedValue { get; set; }

    [Parameter]
    public ResxLoadDataTree Tree { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        StateHasChanged();
    }
}