<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Localizer.StartupPageWindow"
        Background="Transparent" ExtendClientAreaToDecorationsHint="True">

	<Grid Margin="10">
		<StackPanel Orientation="Vertical">
			<Label Content="Localizer" Margin="10" FontSize="28"/>
			<Label Content="Open Recent" Margin="10" FontSize="16"/>
			<StackPanel Orientation="Horizontal">
				<AutoCompleteBox FilterMode="Contains" Width="400" Margin="10" HorizontalAlignment="Left"/>
				<Button Margin="0,0,10,0">Search</Button>
				<Button Margin="5,0">Browse New</Button>
			</StackPanel>
		</StackPanel>
		<StackPanel Grid.Column="1" Margin="40,80">
		</StackPanel>
	</Grid>
  
</Window>
