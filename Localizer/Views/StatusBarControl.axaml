<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:v="using:Localizer.ViewModels" x:DataType="v:StatusBarControlViewModel"
             x:Class="Localizer.StatusBarControl">
	<Grid>
		<StackPanel Orientation="Horizontal" IsVisible="{Binding IsDataGridItemSelected}">
			<TextBlock Text="Key: " Margin="10,0"/>
			<TextBlock Text="{Binding KeyName}" Margin="10,0"/>
			<TextBlock Text="Resource Name : " Margin="10,0"/>
			<TextBlock Text="{Binding TitleResourceName}" FontWeight="Bold"/>
			<TextBlock Text="{Binding ResourceDir}" Margin="10,0"/>
		</StackPanel>
	</Grid>
</UserControl>
