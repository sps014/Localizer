<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:v="using:Localizer"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="60"
			 x:DataType="v:ToolbarControl"
             x:Class="Localizer.ToolbarControl">
	<StackPanel Orientation="Horizontal">
		<Button Height="32" Width="32" Click="refresh_Click" ToolTip.Tip="Refresh">
			<Image Source="/Assets/refresh.png"/>
		</Button>
		<Button Height="32" Width="32" Margin="4,0" ToolTip.Tip="Show/Hide Columns">
			<Image Source="/Assets/columns.png"/>
			<Button.Flyout >
				<Flyout>
					<ScrollViewer MaxHeight="500">
						<ItemsControl ItemsSource="{Binding ToolbarColumns}">
							<ItemsControl.ItemTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal">
										<CheckBox IsChecked="{Binding IsVisible}"
												  x:Name="langColmnCheckBox"
												  Tapped="langColmnCheckBox_Tapped"
												  DoubleTapped="CheckBox_DoubleTapped"
												  />
										<TextBlock  Text="{Binding DisplayValue}"
													VerticalAlignment="Center"></TextBlock>
									</StackPanel>
								</DataTemplate>
							</ItemsControl.ItemTemplate>
						</ItemsControl>
					</ScrollViewer>
				</Flyout>
			</Button.Flyout>
		</Button>
		<Button Height="32" Width="32" Click="cross_Clicked" ToolTip.Tip="Delete Key" Margin="10,0,0,0">
			<Image Source="/Assets/cross.png"/>
		</Button>
		<Button Height="32" Width="32" x:Name="searchBtn" Click="search_Click" ToolTip.Tip="Find">
			<Image Source="/Assets/search.png"/>
		</Button>
		<Button Height="32" Width="32" ToolTip.Tip="Excel" Margin="10,0,0,0">
			<Button.Flyout>
				<MenuFlyout>
					<MenuItem Header="Import Excel" Click="importExlClick"></MenuItem>
					<MenuItem Header="Export Excel" Click="exportExlClick"></MenuItem>
				</MenuFlyout>
			</Button.Flyout>
			<Image Source="/Assets/excel.png"/>
		</Button>
		<Button Height="32" Width="32" ToolTip.Tip="Snapshot" Margin="10,0,0,0">
			<Button.Flyout>
				<MenuFlyout>
					<MenuItem Header="Create Snapshot" Click="exportSnapClick"></MenuItem>
					<MenuItem Header="Load Snapshot" Click="importSnapClick"></MenuItem>
					<MenuItem Header="Unload Snapshot" Click="unloadSnapClick"></MenuItem>

				</MenuFlyout>
			</Button.Flyout>
			<Image Source="/Assets/snap.png"/>
		</Button>
		<Button Height="32" Width="32" x:Name="infoBtn" Click="diffClick" ToolTip.Tip="Diff">
			<Image Source="/Assets/diff.png"/>
		</Button>
	</StackPanel>
</UserControl>
